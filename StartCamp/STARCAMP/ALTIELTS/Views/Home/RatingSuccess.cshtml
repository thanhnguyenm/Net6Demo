@model ALTIELTS.Entities.SurveyQuestion
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .modal{
        max-height: 100%;
    }
</style>
<div class="container">
    @*<div class="center">
        <img class="logo" src="~/images/logo.png" />
    </div>*@
    <h4 class="header center" style="font-weight: bold; mả">ĐÁNH GIÁ CHẤT LƯỢNG DỊCH VỤ</h4>
    <p class="main-title-desc center">Bạn đang đánh giá chi nhánh <strong>Phan Chu Trinh</strong></p>

    <div id="modal1" class="modal open" tabindex="0" style="display: block;">
        <div class="modal-content">
            <div class="row">
                <div class="col s12 center">
                    <img style="width: 150px;" src="~/images/emoji/Asset.png" />
                </div>
                <h5 class="center text-darken-1">
                    Cảm ơn đánh giá của bạn
                </h5>
                <div class="col s12 center">
                    <p>ALT IELTS Gia Sư sẽ nỗ lực hơn để đem đến nhiều trải nghiệm thú vị trong thời gian tới.</p>
                    <p>Hãy tiếp tục theo dõi chúng tôi tại <a href="#">ieltsgiasu.com</a></p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="center">
                <a href="/Home/Rating" class="waves-effect waves-light btn-small start-button red" id="btn">Đánh giá lại từ đầu</a>
            </div>
        </div>
    </div>

</div>



@section Scripts{
    <script>
        var time = 5;
        setTimeout(function () {
            setInterval(function () {
                if (time < 0) {
                    window.location = "/Home/Rating";
                }
                else {
                    $('#btn').text(`Đánh giá lại từ đầu (${time})`);
                }
                time--;
            }, 1000);
        }, 2);
    </script>
}
